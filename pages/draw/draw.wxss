/* pages/draw/draw.wxss */

view.root {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: #f0f0f0;
}

canvas.paper {
    background: white;
    position: absolute;
    width: 100%;
    height: 100%;
    box-shadow: 1px 1px 5px rgba(0, 0, 0, .3);
}

view.color-item.selected {
    border-color: black;
}

view.toolbar {
  display: inline-block;
  position: fixed;
  top: auto;
  z-index: 99;
  right: 1.5rem;
	bottom: 0.5rem;
	transition: opacity 0.2s ease-out;
  pointer-events: none;
}

view.tool {
  background-color: rgba(242,242,242,0.98);
  border-radius: 50%;
  box-shadow: 0.1rem 0.1rem 0 rgba(0,0,0,0.25);
  width: 2.5rem;
  height: 2.5rem;
  position: relative;
  display: flex;
  align-items: center;
  filter: none;
  pointer-events: auto;
}

view.tool.delete {
  right: 3.5rem;
  pointer-events: auto;
  position: fixed;
  bottom: 0.5rem;
  filter: none !important;
}